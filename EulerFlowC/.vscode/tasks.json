{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/I", "${workspaceFolder}\\include", // ðŸ‘ˆ Include path for headers
                "/I", "${workspaceFolder}\\lib",     // ðŸ‘ˆ Include path for libs
                "/Zi",
                "/EHsc",
                "/nologo",
                "${workspaceFolder}\\main.c",     // Main source file
                "${workspaceFolder}\\lib\\rkf45.c",   // Additional C file to compile/link
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}